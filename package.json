{
  "name": "waystation-fontend",
  "version": "0.1.0",
  "description": "Waystation Frontend",
  "type": "module",
  "dependencies": {
    "highlight.js": "^11.8.0",
    "marked": "^4.3.0",
    "mithril": "^2.0.4",
    "overtype": "^2.0.1"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "dev:web": "rollup -c rollup.web.config.js -w",
    "serve": "npm-run-all --parallel dev serve:http",
    "serve:http": "serve . -p 3000",
    "serve:compare": "npm-run-all --parallel dev dev:web serve:http",
    "build": "rollup -c",
    "build:web": "rollup -c rollup.web.config.js",
    "build:all": "npm-run-all build build:web",
    "build:prod": "NODE_ENV=production rollup -c",
    "prepare": "husky"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/mithril-global": "^2.2.4",
    "autoprefixer": "^10.4.22",
    "daisyui": "^5.5.11",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "rollup": "^4.28.1",
    "rollup-plugin-postcss": "^4.0.2",
    "serve": "^14.2.4",
    "tailwindcss": "^4.1.17",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "wright": "*"
  }
}
